{
  "compilerOptions": {
    "declaration": false,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "baseUrl": ".",
    "outDir": "./build/out/main",
    "sourceMap": true
  },
  "include": ["./src/**/*.*"]
}
